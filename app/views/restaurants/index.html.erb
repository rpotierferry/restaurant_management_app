<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 justify-items-center">
  <% @restaurants.each do |restaurant| %>
  <div class="shadow-md shadow-stone-200 rounded-lg p-2 m-1 md:m-3 w-4/5 bg-gray-50 flex">
    <div>
      <%= cl_image_tag restaurant.photo.key, height: 200, width: 150, crop: :fill, class: "rounded-lg" %>
    </div>
    <div class="flex flex-col p-1">
      <p>
        <h1><%= restaurant.name %></h1>
        <span class="text-sm"><%= restaurant.average_rating %> ‚≠ê</span>
        <span class="text-xs"><%= restaurant.category %></span>
        <%= link_to "Info", restaurant_path(restaurant), class:"text-xs text-sky-500 hover:text-sky-700" %>
      </p>
    </div>
  </div>
  <% end %>
</div>
