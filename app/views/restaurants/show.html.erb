<div class="shadow-md shadow-stone-200 rounded-lg mx-5 md:mx-10 mt-5 md:mt-10 bg-gray-50">
  <div class="grid grid-cols-1 md:grid-cols-2 justify-items-center">


    <div class="p-5 md:p-10">
      <%= cl_image_tag @restaurant.photo.key, height: 300, width: 400, crop: :fill %>
      <h1 class="text-3xl"><%= @restaurant.name %></h1>
      <h2 class="text-xl"><%= @restaurant.address %></h2>
      <h3><%= @restaurant.category %> cuisine</h3>
      <span>Rating: <%= @restaurant.average_rating %> ‚≠ê</span>
      <p class="mt-3 md:mt-0 flex items-center">
        <%= link_to restaurants_path do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-sky-500 hover:text-sky-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
          </svg>
        <% end %>
        <span class="mx-1 text-sky-500 text-xs">Back to list</span>
      </p>

      <div class="mt-2">
        <h6 class="mb-1 text-md">
          Last review
        </h6>
        <p class="text-sm">
          <em>
            "<%= @restaurant.reviews.last.content %>"
          </em>
        </p>
        <%= link_to 'See all reviews', restaurant_reviews_path(@restaurant), class: "text-sky-500 hover:text-sky-700 text-xs" %>
      </div>
    </div>

    <div class="p-5 md:p-10">
      <h5 class="mb-2">Tell us about your experience</h5>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, placeholder: "What did you think?", label: false, input_html: { class: "rounded-md" } %>
        <div class="flex">
          <%= f.input :rating, collection: 0..5, label: false, placeholder: "0-5", input_html: { class: "rounded-md" } %>
          <span class="mx-2 text-sm">Your rating</span>
        </div>
        <%= f.submit 'Add your review', class: "bg-sky-500 p-1 mt-1 hover:bg-sky-600 rounded-md" %>
      <% end %>
    </div>
  </div>
</div>
