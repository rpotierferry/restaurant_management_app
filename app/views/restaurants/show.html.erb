<div class="shadow-md shadow-stone-200 rounded-lg grid justify-items-center">
  <div class="flex">
    <div class="p-10">
      <h1 class="text-3xl"><%= @restaurant.name %></h1>
      <h2 class="text-xl"><%= @restaurant.address %></h2>
      <h3><%= @restaurant.category %> cuisine</h3>
      <span>Rating: <%= @restaurant.average_rating %> ‚≠ê</span>
        <%= link_to 'See all reviews', restaurant_reviews_path(@restaurant) %>
      <p>
        <%= link_to 'Back to restaurant list', restaurants_path %>
      </p>
    </div>

    <div class="p-10">
      <h5>Leave a review</h5>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.submit 'Add your review' %>
      <% end %>
    </div>
  </div>
  </div>
